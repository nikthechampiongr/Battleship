<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
        x:Class="Battleship.MainWindow"
        Title="MainWindow">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name="OfflineButton" Click="OfflineButton_OnClick" Margin="1">Παίξε με AI</Button>
                <Separator/>
                <Button Click="HostButton_OnClick" Name="HostButton" Margin="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"><Label HorizontalAlignment="Center">Host</Label></Button>
                <Separator/>
                <TextBox Name="AddressField" Margin="2" Watermark="Address"/>
                <Button Name="ConnectButton" Click="ConnectButton_OnClick" Margin="1" HorizontalAlignment="Center"><Label VerticalAlignment="Center">Connect</Label></Button>
                <Separator/>
                <TextBlock Name="WinText" HorizontalAlignment="Center"/>
                <TextBlock Name="LossText" HorizontalAlignment="Center"/>
                <TextBlock Name="TimePlayedText" HorizontalAlignment="Center"/>
                <TextBlock Name="TurnsPlayedText" HorizontalAlignment="Center"/>
        </StackPanel>
</Window>
