<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Battleship.Controls"
        mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="700"
        x:Class="Battleship.MainWindow"
        Title="Battleship">
    <StackPanel Margin="20">
        <StackPanel HorizontalAlignment="Center" Margin="3" Name="SetupPanel" Orientation="Horizontal">
            <Button Name="CarrierButton" Click="PlaceCarrier">Carrier x</Button>
            <Button Name="DestroyerButton" Click="PlaceDestroyer">Destroyer</Button>
            <Button Name="BattleshipButton" Click="PlaceBattleShip">Battleship</Button>
            <Button Name="SubmarineButton" Click="PlaceSubmarine">Submarine</Button>
            <Button Name="OrientationButton" Click="ChangeOrientation">Orientation: horizontal</Button>
        </StackPanel>

        <Button HorizontalAlignment="Center" Margin="3" IsVisible="False" Click="Hit" Name="HitButton">Attack</Button>

        <controls:BattleshipGrid Name="PlayerGrid" Height="550" Width="500"/>
    </StackPanel>
</Window>
